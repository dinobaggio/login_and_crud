    function update_student() {
      let data = $(formStudent).serializeArray().reduce(function(obj, item) {
          obj[item.name] = item.value;
          return obj;
      }, {});
      /*
      * bisa ditaro sini kalo perlu ada loading animasinya
      * disini dinyalainnya
      */
      //console.log(data.birthday)
      //data.birthday = new Date(data.birthday);
      $('#animasiloading').show();
      update_data(data).then(function (res) {
        $('#animasiloading').hide();
        if (res.message == 'success') {
          alert('data sukses diupdate');
          modalStudent.modal('hide');
          init();
        } else if (res.message == 'failed') {
          alert(res.error);
          modalStudent.modal('hide');
        }
        console.log(res);
      }).catch(function (res) {
        let response = res.responseJSON;
        if (response.message == 'failed') {
          alert(response.error);
        }
      });
    }
    function delete_student(code) {
      //href="/delete_student/"
      let yakin = confirm('Yakin ingin menghapus data ?');
      if (yakin == true) {
        delete_data(code).then(function (res) {
          //window.location = '/data_student';
          init();
        }).catch(function (res) {
          console.log(res);
        });
      }
    }
    function get_student_detail (code) {
      /*
      * promise bawaan javascript
      */
      let data = new Promise(function (resolve, reject) {
        $.ajax({
            url: '/student_detail/'+code,
            type: 'GET'
        }).done(function (res) {
            /*
            * loading animasinya disini dimatiinya
            * disini untuk proses sukses
            */
            $('#animasiloading').hide();
            resolve(res);
          //console.log(res);
        }).fail(function (res) {
            /*
            * loading animasinya disini dimatiinya
            * disini jika proses gagal
            */
            $('#animasiloading').hide();
            reject(res);
        });
      });
      return data;
    }
    function add_data (student) {
      /*
      * promise bawaan javascript
      */
      let data = new Promise(function (resolve, reject) {
        $.ajax({
            url: '/save_student',
            type: 'POST',
            data: student
        }).done(function (res) {
          /*
          * loading animasinya disini dimatiinya
          * disini untuk proses sukses
          */
          $('#animasiloading').hide();
          resolve(res);
        }).fail(function (res) {
          /*
          * loading animasinya disini dimatiinya
          * disini jika proses gagal
          */
          $('#animasiloading').hide();
          reject(res);
        });
      });
      return data;
      //animasi loading di table
      divTable.busyLoad("show", { spinner: "accordion", background: "rgba(174, 189, 214, 0.73)" });
    }
    function update_data (student) {
      let data = new Promise(function (resolve, reject) {
        $.ajax({
          url: '/update_student',
          type: 'POST',
          data: student
        }).done(function (res) {
          /*
          * loading animasinya disini dimatiinya
          * disini untuk proses sukses
          */
          $('#animasiloading').hide();
          resolve(res);
        }).fail(function (res) {
          /*
          * loading animasinya disini dimatiinya
          * disini untuk proses sukses
          */
          $('#animasiloading').hide();
          reject(res);
        });
      });
      return data;
      //animasi loading di table
      divTable.busyLoad("show", { spinner: "accordion", background: "rgba(174, 189, 214, 0.73)" });
    }
    function delete_data(code) {

      let data = new Promise(function (resolve, reject){
        $.ajax({
          url: '/delete_student/'+code,
          type: 'GET'
        }).done(function (res) {
          // disini matikan animasi
          resolve(res);
        }).fail(function (res) {
          // disni matikan animasi
          reject(res);
        });
      });
      return data;
      //animasi loading di table
      divTable.busyLoad("show", { spinner: "accordion", background: "rgba(174, 189, 214, 0.73)" });
    }
    function get_all_student () {
      let data = new Promise(function (resolve, reject) {
        $.ajax({
          url:'/get-all-student',
          type: 'GET'
        }).done(function (res) {
          resolve(res);
        }).fail(function (res) {
          reject(res);
        });
      });
      return data;
    }
    function get_search_student (search) {
      let data = new Promise(function (resolve, reject) {
        $.ajax({
          url: '/get-all-student',
          type: 'GET',
          data: search
        }).done(function (res) {
          resolve(res);
        }).fail(function (res) {
          reject(res);
        });
      });
      return data;
    }
    function convert_date_to_locale(date) {
      let tanggal = moment(date).locale('id').format('DD MMMM YYYY');
      return tanggal;
    }
    function convert_database_date (date) {
      let tanggal = new Date(date);
      return tanggal;
    }
    function resetFormForAdd() {
      $('#animasiloading').hide();
      $.busyLoadFull("show", { spinner: "cube-grid" });
      $('.modal-title').text('Tambah Data');
      $('input.form-control', modalStudent).val('').prop('disabled', false);
      btnSaveStudent.show();
      btnUpdateStudent.hide();
      $.busyLoadFull("hide");
    }
    function setFormForDetail(data) {
      $('#animasiloading').hide();
