<body class="body-login">

    <div class="panel-heading">
      <div class="panel-body">
          <form action="/login" method="POST" autocomplete="off" class="form_center">

            <div class="form-group">
              <img src="images/logo.png" class="img img-responsive center-block">
            </div>

            <div class="form-group">
              <h3>.: SILAHKAN LOGIN :.</h3>
            </div>

            <div class="form-group">
              <div id="#message">
                <%if(message) {%>
                  <p class="alert alert-danger"> <%= message %> </p>
                <% } %>
              </div>
            </div>

            <div class="form-group">
              <input type="text" name="username" placeholder="Usename" class="form-control" autofocus>
            </div>

            <div class="form-group">
              <input type="text" name="password" placeholder="Password" class="form-control">
            </div>

            <button type="submit" class="btn btn-info">login</button>
          </form>

      </div>

      <div class="login-footer">
        <p>LOREM IPSUM Â© 2018</p>
      </div>
    </div>

